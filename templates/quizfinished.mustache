<h1 class="text-center">{{#str}}totalscore, mod_readaloud{{/str}} {{total}}%</h1>
<div class="quizrating text-center">
    {{#yellowstars}}
        <span><img src="{{{ config.wwwroot }}}/mod/readaloud/pix/yellow_star.png"/></span>
    {{/yellowstars}}
    {{#graystars}}
        <span><img src="{{{ config.wwwroot }}}/mod/readaloud/pix/gray_star.png"/></span>
    {{/graystars}}
</div>
{{#showfullresults}}
<p>
    <a class="btn btn-primary itemscoresbutton" data-toggle="collapse" href="#itemscores" role="button" aria-expanded="false" aria-controls="itemscores">
        {{#str}}showitemscores, mod_readaloud{{/str}}
    </a>
</p>
{{/showfullresults}}
<div class="collapse" id="itemscores">
{{#results}}
<div class="mod_readaloud_result_div">
    <div class="panel-group" id="accordion">
        <div class="btn-primary mod_readaloud_result_index">{{index}}</div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title"> <a class="accordion-toggle mod_readaloud_result_title collapsed" data-toggle="collapse" data-parent="#accordion" href="#accordion{{index}}">  {{title}}</a> </h4>
            </div>
            <div id="accordion{{index}}" class="panel-collapse collapse in">
                <div class="panel-body">
                    <ul class="readaloud_result">
                        <li><div class="mod_readaloud_question_text"><b>{{#str}}questiontext, mod_readaloud{{/str}}: </b><br/>{{{questext}}}</div></li>
                        <li><div class="mod_readaloud_result_score"><b>{{#str}}score, mod_readaloud{{/str}}: </b><br/>{{correctitems}}/{{totalitems}}</div></li>
                        <li><div class="mod_readaloud_result_grade"><b>{{#str}}grade, mod_readaloud{{/str}}: </b><br/>{{grade}}%</div></li>
                        {{#hascorrectanswer}}
                            <li>
                                <div class="mod_readaloud_result_correctanswer"><b>{{#str}}correctanswer, mod_readaloud{{/str}}</b><br/>
                                    {{#correctans}}<span class="mod_readaloud_finishedanswer">{{{sentence}}}</span>{{/correctans}}
                                </div>
                            </li>
                        {{/hascorrectanswer}}
                        {{#hasincorrectanswer}}
                            <li><div class="mod_readaloud_result_incorrectanswer"><b>{{#str}}incorrectanswer, mod_readaloud{{/str}} </b><br/>
                                {{#incorrectans}}<span class="mod_readaloud_finishedanswer">{{{sentence}}}</span>{{/incorrectans}}
                            </div>
                            </li>
                        {{/hasincorrectanswer}}
                        {{#hasanswerdetails}}
                        <li>
                            <div class="mod_readaloud_result_answerdetails"><b>{{#str}}answerdetails, mod_readaloud{{/str}}</b><br/>
                                <a class="mod_readaloud_finishedanswerdetailslink" data-target="ml_answerdetails_container_{{index}}" data-resultstemplate="{{resultstemplate}}" data-resultsdata="{{resultsdatajson}}" href="#">{{#str}}seeanswerdetails, mod_readaloud{{/str}}</a>
                            </div>
                        </li>
                        {{/hasanswerdetails}}
                        <li><div class="mod_readaloud_result_rating">
                            {{#yellowstars}}
                                <span><img src="{{{ config.wwwroot }}}/mod/readaloud/pix/yellow_star.png"/></span>
                            {{/yellowstars}}
                            {{#graystars}}
                                <span><img src="{{{ config.wwwroot }}}/mod/readaloud/pix/gray_star.png"/></span>
                            {{/graystars}}
                        </div>
                        </li>
                    </ul>
                    <div id="ml_answerdetails_container_{{index}}" class="ml_qf_itemresults" style="display: none"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/results}}
</div>
{{#reattempturl}}
<div class="readaloud_actionbutton">
<a class="btn btn-secondary btn_finished_attempt center" href="{{{reattempturl}}}" data-href="{{{reattempturl}}}" data-action="reattempt">
    {{#str}}reattempt, mod_readaloud{{/str}}</a>
</div>
{{/reattempturl}}
{{^element.frozen}}
{{#js}}
    require(['jquery', 'mod_readaloud/quizfinished'], function($, quizfinished) {
      quizfinished.init();
    });
{{/js}}
{{/element.frozen}}
