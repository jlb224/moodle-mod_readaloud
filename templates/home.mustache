<div id="{{M_HOME_CONTAINER}}" class="{{M_HOME_CONTAINER}}">
    {{{moduleinstance.intro}}}
    <div id="{{M_PROGRESS_BAR_CONTAINER}}" class="{{M_PROGRESS_BAR_CONTAINER}} d-flex align-items-center">
        <span class="mr-2">Progress:</span>
        <div class="progress w-25 mr-2">
            <div class="progress-bar" role="progressbar" aria-label="Progress" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
            75%
            </div>
        </div>
        <span>75% complete</span>
    </div>

    <div id="{{M_MODE_JOURNEY_CONTAINER}}" class="{{M_MODE_JOURNEY_CONTAINER}} d-flex flex-wrap align-items-center justify-content-center p-3">
        <div class="mode-journey d-flex align-items-center">
            <div class="mode {{mode-status}} completed" data-bs-toggle="tooltip" data-bs-placement="top" title="{{#str}}completed{{/str}}">
                <i class="fa-solid fa-headphones"></i>
                {{#str}}mode_listen, mod_readaloud{{/str}}
            </div>
            <i class="fa-solid fa-arrow-right journey-arrow"></i>
        </div>

        <div class="mode-journey d-flex align-items-center">
            <div class="mode {{mode-status}} completed" data-bs-toggle="tooltip" data-bs-placement="top" title="{{#str}}completed{{/str}}">
                <i class="fa-solid fa-comment"></i>
                {{#str}}mode_practice, mod_readaloud{{/str}}
            </div>
            <i class="fa-solid fa-arrow-right journey-arrow"></i>
        </div>

        <div class="mode-journey d-flex align-items-center">
            <div class="mode {{mode-status}} in-progress" data-bs-toggle="tooltip" data-bs-placement="top" title="{{#str}}mode_tooltip_notcomplete, mod_readaloud{{/str}}">
                <i class="fa-solid fa-comments"></i>
                {{#str}}mode_shadow, mod_readaloud{{/str}}
            </div>
            <i class="fa-solid fa-arrow-right journey-arrow"></i>
        </div>

        <div class="mode-journey d-flex align-items-center">
            <div class="mode {{mode-status}} upcoming" data-bs-toggle="tooltip" data-bs-placement="top" title="{{#str}}mode_tooltip_notcomplete, mod_readaloud{{/str}}">
                <i class="fa-solid fa-book-open-reader"></i>
                {{#str}}mode_read, mod_readaloud{{/str}}
            </div>
            <i class="fa-solid fa-arrow-right journey-arrow"></i>
        </div>

        <div class="mode-journey d-flex align-items-center">
            <div class="mode {{mode-status}} upcoming" data-bs-toggle="tooltip" data-bs-placement="top" title="{{#str}}mode_tooltip_notcomplete, mod_readaloud{{/str}}">
                <i class="fa-solid fa-circle-question"></i>
                {{#str}}mode_quiz, mod_readaloud{{/str}}
            </div>
            <i class="fa-solid fa-arrow-right journey-arrow"></i>
        </div>

        <div class="mode-journey d-flex align-items-center">
            <div class="mode {{mode-status}} upcoming" data-bs-toggle="tooltip" data-bs-placement="top" title="{{#str}}mode_tooltip_end, mod_readaloud{{/str}}">
                <i class="fa-solid fa-chart-simple"></i>
                {{#str}}mode_report, mod_readaloud{{/str}}
            </div>
            <i class="fa-solid fa-arrow-right journey-arrow last-mode"></i>
        </div>
    </div>


    <div id="{{M_HOME_CONTAINER}}" class="{{M_HOME_CONTAINER}} border rounded p-3 w-100">
        <h5>Recommended next</h5>
        <a class="btn btn-primary" href="#">Continue with last accessed</a>
        <a class="btn btn-outline-primary" href="#">View something or other</a>
    </div>
</div>



