<div id="mod_readaloud_smallreport_cont" class='mod_readaloud_smallreport_cont mod_readaloud_center'>
    <div class='mod_readaloud_smallreport_heading'>
        {{#ready}}
            {{#showstats}}{{#str}}evaluatedmessage , mod_readaloud{{/str}}{{/showstats}}
            {{^showstats}}{{#str}}hiddenevaluationmessage, mod_readaloud{{/str}}{{/showstats}}
            {{#notingradebook}}{{#str}}notaddedtogradebook , mod_readaloud{{/str}}{{/notingradebook}}
        {{/ready}}
        {{^ready}}
            {{#remotetranscribe}}
                {{#str}}notgradedyet , mod_readaloud{{/str}}
            {{/remotetranscribe}}
            {{^remotetranscribe}}
                {{#str}}notmanuallygradedyet , mod_readaloud{{/str}}
            {{/remotetranscribe}}
        {{/ready}}
    </div>
    {{> mod_readaloud/smallreportplayer}}
    {{> mod_readaloud/smallreportrating}}
    <div class='mod_readaloud_smallreport_status'>
            {{^ready}}
                {{#remotetranscribe}}
                    {{#str}}waiting , mod_readaloud{{/str}}
                {{/remotetranscribe}}
                {{^remotetranscribe}}
                    {{#str}}waitingforteacher , mod_readaloud{{/str}}
                {{/remotetranscribe}}
            {{/ready}}
    </div>
    <div class='mod_readaloud_smallreport_readagainbutton {{^ready}}hide{{/ready}}'>
        <a id="{{readagainbutton}}" class="btn btn-secondary" href="#">{{#str}}readagain , mod_readaloud{{/str}}</a>
    </div>
    {{> mod_readaloud/fullreport}}
    <!-- Hidden input storing JSON configuration -->
    <input id="{{configcontrolid}}" type="hidden" value="{{configjsonstring}}" />
</div>