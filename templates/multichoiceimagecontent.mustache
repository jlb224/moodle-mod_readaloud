<div class="row mcplayrow">
 {{#sentences}}
     
         <div class="col-md-6 mcaudiotranscript_{{index}}">
             <div class="readaloud_mc_response {{rtl}}" data-index="{{indexplusone}}" id="{{uniqueid}}_option{{indexplusone}}" name="{{uniqueid}}_options" >
                 <span class="readaloud_sentence">{{prompt}}</span>
                 <span class="readaloud_mc_resultbox">
                 <i class="fa fa-check fa-lg readaloud_mc_right" style="display: none;"></i>
                 <i class="fa fa-times fa-lg readaloud_mc_wrong" style="display: none;"></i>
                 </span>
                 <div class="readaloud_mc_image"><img src="{{mediaurl}}" /></div>
             </div>
             
         </div>
 {{/sentences}}
</div>